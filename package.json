{
  "name": "buttplug-playground",
  "version": "0.0.1",
  "description": "Connectivity and Device Testing/Tutorial for Buttplug Websockets",
  "author": "Kyle Machulis <kyle@machul.is>",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "start:remote": "cross-env NODE_ENV=development webpack-dev-server --open --hot --host 192.168.123.3",
    "start:secure": "cross-env NODE_ENV=development webpack-dev-server --open --hot --https",
    "start:remote:secure": "cross-env NODE_ENV=development webpack-dev-server --open --hot --https --host 192.168.123.3",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "tslint": "tslint -c tslint.json 'src/**/*.ts' 'tests/**/*.ts'",
    "tslint:fix": "tslint -c tslint.json --fix semicolon,comma,no-var-keyword,ordered-imports 'src/**/*.ts' 'tests/**/*.ts'",
    "webpack-defaults": "webpack-defaults",
    "build:main": "tsc -p tsconfig.json",
    "pretest": "yarn build:main"
  },
  "dependencies": {
    "buttplug": "^0.2.2",
    "nouislider": "^10.1.0",
    "tslint": "^5.8.0",
    "viewport-units-buggyfill": "^0.6.2",
    "vue": "^2.5.2",
    "vue-awesome": "^2.3.3",
    "vue-buttplug-material-component": "^0.0.3",
    "vue-material": "^0.8.1",
    "vue-slider-component": "^2.4.3",
    "vue-touch": "next"
  },
  "devDependencies": {
    "@types/node": "^8.0.47",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.5",
    "noop-loader": "^1.0.0",
    "null-loader": "^0.1.1",
    "ts-loader": "^3.1.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.3",
    "uglify-es": "^3.1.5",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "url-loader": "^0.6.2",
    "vue-loader": "^13.3.0",
    "vue-property-decorator": "^6.0.0",
    "vue-template-compiler": "^2.5.2",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.9.3"
  },
  "pre-push": []
}
