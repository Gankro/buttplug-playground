{
  "name": "buttplug-playground",
  "version": "0.0.1",
  "description": "Connectivity and Device Testing/Tutorial for Buttplug Websockets",
  "author": "Kyle Machulis <kyle@machul.is>",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --open --hot --mode=development",
    "start:remote": "webpack-dev-server --open --hot --host 192.168.123.3 --mode=development",
    "start:secure": "webpack-dev-server --open --hot --https --mode=development",
    "start:remote:secure": "webpack-dev-server --mode=development --open --hot --https --host 192.168.123.3",
    "build:dev": "webpack --progress --hide-modules --mode=development",
    "build": "webpack --progress --hide-modules --mode=production --define process.env.NODE_ENV='production'",
    "tslint": "tslint -c tslint.json 'src/**/*.ts' 'tests/**/*.ts'",
    "tslint:fix": "tslint -c tslint.json --fix semicolon,comma,no-var-keyword,ordered-imports 'src/**/*.ts' 'tests/**/*.ts'",
    "webpack-defaults": "webpack-defaults",
    "build:main": "tsc -p tsconfig.json",
    "pretest": "yarn build:main",
    "deploy": "trash deploy && mkdir -p deploy && cp index.html deploy && cp -r dist deploy"
  },
  "dependencies": {
    "buttplug": "^0.6.1",
    "matomo-tracker": "^2.2.0",
    "nouislider": "^11.1.0",
    "tslint": "^5.9.1",
    "viewport-units-buggyfill": "^0.6.2",
    "vue": "^2.5.16",
    "vue-awesome": "^3.0.0",
    "vue-buttplug-material-component": "^0.1.1",
    "vue-slider-component": "^2.6.2",
    "vue-touch": "next",
    "vuetify": "^1.0.17"
  },
  "devDependencies": {
    "@types/node": "^9.6.7",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "noop-loader": "^1.0.0",
    "null-loader": "^0.1.1",
    "style-loader": "^0.21.0",
    "trash": "^4.3.0",
    "trash-cli": "^1.4.0",
    "ts-loader": "^4.2.0",
    "ts-node": "^6.0.2",
    "typescript": "^2.8.3",
    "uglify-es": "^3.3.9",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "vue-loader": "^15.0.4",
    "vue-property-decorator": "^6.0.0",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3"
  },
  "pre-push": []
}
