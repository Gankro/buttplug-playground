{
  "name": "buttplug-playground",
  "version": "0.0.1",
  "description": "Connectivity and Device Testing/Tutorial for Buttplug Websockets",
  "author": "Kyle Machulis <kyle@machul.is>",
  "private": true,
  "scripts": {
    "start": "yarn build:config && webpack-dev-server --open --hot --config build/webpack.base.js",
    "start:remote": "yarn build:config && webpack-dev-server --open --hot --host 192.168.123.3 --config build/webpack.base.js",
    "start:secure": "yarn build:config && webpack-dev-server --open --hot --https --config build/webpack.base.js",
    "start:remote:secure": "yarn build:config && webpack-dev-server --open --hot --https --host 192.168.123.3 --config build/webpack.base.js",
    "build:config": "node build/generate_config.js",
    "build:dev": "yarn build:config && webpack --progress --hide-modules --config build/webpack.base.js",
    "build": "yarn build:config && webpack --progress --hide-modules --config build/webpack.production.js",
    "tslint": "tslint -c tslint.json 'src/**/*.ts' 'tests/**/*.ts'",
    "tslint:fix": "tslint -c tslint.json --fix semicolon,comma,no-var-keyword,ordered-imports 'src/**/*.ts' 'tests/**/*.ts'",
    "webpack-defaults": "webpack-defaults",
    "build:main": "yarn build:config && tsc -p tsconfig.json",
    "pretest": "yarn build:main",
    "deploy": "trash deploy && mkdir -p deploy && cp index.html deploy && cp -r dist deploy"
  },
  "dependencies": {
    "buttplug": "^0.7.0",
    "matomo-tracker": "^2.2.0",
    "nouislider": "^11.1.0",
    "tslint": "^5.9.1",
    "viewport-units-buggyfill": "^0.6.2",
    "vue": "^2.5.16",
    "vue-awesome": "^3.0.0",
    "vue-buttplug-material-component": "^0.2.0",
    "vue-slider-component": "^2.6.2",
    "vue-touch": "next",
    "vuetify": "^1.0.17"
  },
  "devDependencies": {
    "@types/node": "^10.0.3",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "noop-loader": "^1.0.0",
    "null-loader": "^0.1.1",
    "style-loader": "^0.21.0",
    "trash": "^4.3.0",
    "trash-cli": "^1.4.0",
    "ts-loader": "^4.2.0",
    "ts-node": "^6.0.2",
    "typescript": "^2.8.3",
    "uglify-es": "^3.3.9",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "vue-loader": "^15.0.6",
    "vue-property-decorator": "^6.0.0",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.1.2",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  },
  "pre-push": []
}
